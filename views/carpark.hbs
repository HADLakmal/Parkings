{{>carparkheader}}

<div class="col-xs-12 col-sm-6 col-md-6">
    <div class="well well-lg">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <img src="{{park.image}}" alt="" class="img-rounded img-responsive">
            </div>
            <div class="col-sm-6 col-md-8">
                <h4>
                    {{park.userName}}
                </h4>
                <small><cite title="San Francisco, USA">{{park.address}} <i class="glyphicon glyphicon-map-marker">
                </i></cite></small>
                <p>

                    <i class="glyphicon glyphicon-envelope"></i> {{park.email}}
                    <br>
                    <i class="glyphicon glyphicon-phone"></i> {{park.number}}
                    <br>
                    <i class="glyphicon glyphicon-gift"></i>June 02, 1988</p>
                <!-- Split button -->
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">
                        Social</button>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span><span class="sr-only">Social</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Twitter</a></li>
                        <li><a href="https://plus.google.com/+Jquery2dotnet/posts">Google +</a></li>
                        <li><a href="https://www.facebook.com/jquery2dotnet">Facebook</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Github</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">

<table style="width:100%">
  <tr>
    <th>Email</th>
    <th>Month</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Accept</th>
  </tr>
  {{# each reservations}}

                  {{# each this}}


                      <tr>
                      <td>{{this.userEmail}} </td>
                      <td>{{this.month}}</td>
                      <td>{{this.date}}</td>
                      <td>{{this.startTime}}</td>
                      <td>{{this.endTime}}</td>
                      <td><a href="#" class="btn btn-primary pull-left" role="button">Accept</a></td>
                      </tr>


                  {{/each}}

          {{/each}}
</table>
</div>