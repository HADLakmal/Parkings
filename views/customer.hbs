{{>userHeader}}

<div class="col-xs-12 col-sm-6 col-md-6">
    <div class="well well-lg">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <img src="{{customer.image}}" alt="" class="img-rounded img-responsive">
            </div>
            <div class="col-sm-6 col-md-8">
                <h2>
                    {{customer.userName}}
                </h2>
                <h3><cite>{{customer.address}} <i class="glyphicon glyphicon-map-marker">
                </i></cite></h3>
                <p>

                <h4><i class="glyphicon glyphicon-envelope"></i>{{customer.email}}</h4>

                <h4><i class="glyphicon glyphicon-phone"></i> {{customer.number}}</h4>


            </div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="container">
        {{# each reservations}}
            <div class="row">
                {{# each this}}
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3>{{this.parkEmail}}</h3>
                                <p class="discription">
                                <div>
                                    Accept : {{this.accept}}
                                </div>
                                <div>
                                    Email : {{this.parkEmail}}
                                </div>
                                </p>
                                <div class="clearfix">
                                    <a href="/users/view" class="btn btn-primary pull-left" role="button">View</a>
                                </div>

                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>
</div>
